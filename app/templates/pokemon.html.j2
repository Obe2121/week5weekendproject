{% extends 'base.html.j2' %}

{% block title %}
Pokemon Results
{% endblock %}

{% block content %}
 <h1>Pokemon Stats</h1>

<form action ="{{url_for('auth.pokemon')}}" method ="POST">
<small style="color:red;">{{error}}</small>
    {{ form.hidden_tag() }}
    <div>
        {{form.name.label(class="form-label")}}
        {{form.name(class="form-control")}}
        {% for error in form.name.errors %}
            <small style="color:red;">{{error}}</small>
        {% endfor %}
        <br>
        </div>
    <div>
        {{form.submit(class="btn btn-primary form-control")}}
  </form>
    {% if name %}
        <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th scope="col">Poke Name</th>
            <th scope="col">Base HP</th>
            <th scope="col">Base Defense</th>
            <th scope="col">Base Attack</th>

            </tr> 
        </thead>
        <tbody>
            {% for pokemon in name %}
                <tr>
                    <th scope="row">{{pokemon.poke_name}}</th>
                    <td>{{pokemon.base_hp}}</td>
                    <td>{{pokemon.base_defense}}</td>
                    <td>{{pokemon.base_attack}}</td>      
                </tr>
            {% endfor %}
        </tbody>
        </table>
    {% else %}
  
    {% endif %}

{% endblock %}