{% extends 'base.html.j2' %}
{% block title %}
My Pokemon
{% endblock %}

{% block content %}
    <h1> My Pokemon </h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th scope="row">Pokemon Name</th>
            <th scope="row">Base HP</th>
            <th scope="row">Base Attack</th>
            </tr> 
        </thead>
        <tbody>
            {% for poke in pokemons %}
                <tr>
                    <th scope="row">{{poke.poke_name}}</th>
                    <td> {{poke.base_hp}} </td>
                    <td> {{poke.base_attack}} </td>
                </tr>
            {% endfor %}
{% endblock %}